<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th>Illness</th>
      <th>Doctor</th>
      <th>Medicines</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Dosage amount</th>
      <th>Dosage frequency</th>
      <th>Dosage time</th>
      <th>Notification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.illness %></td>
        <td><%= history.doctor %></td>
        <td><%= history.medicines %></td>
        <td><%= history.start_date %></td>
        <td><%= history.end_date %></td>
        <td><%= history.dosage_amount %></td>
        <td><%= history.dosage_frequency %></td>
        <td><%= history.dosage_time %></td>
        <td><%= history.notification %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

